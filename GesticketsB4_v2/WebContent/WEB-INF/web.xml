    <servlet-name>SuppressionUtilisateur</servlet-name>
    <url-pattern>/suppressionUtilisateur</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ListeTickets</servlet-name>
    <servlet-class>servlets.ListeTickets</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListeTickets</servlet-name>
    <url-pattern>/listeTickets</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AjouterTicket</servlet-name>
    <servlet-class>servlets.AjouterTicket</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AjouterTicket</servlet-name>
    <url-pattern>/ajouterTicket</url-pattern>
  </servlet-mapping>
  <filter>
  	<filter-name>PrechargementFilter</filter-name>
  	<filter-class>filters.PrechargementFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>PrechargementFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>dao.InitialisationDaoFactory</listener-class>
  </listener>
</web-app>